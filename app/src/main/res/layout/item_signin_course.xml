<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginBottom="3dp"
        app:cardBackgroundColor="@color/colorCard"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <com.example.achuan.bombtest.widget.SquareImageView
                android:id="@+id/iv_wechat_item_image"
                android:scaleType="centerCrop"
                android:transitionName="shareView"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:padding="10dp"/>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="8dp"
                android:layout_height="wrap_content">
                <!--课程名称-->
                <TextView
                    android:id="@+id/tv_assistant_item_Cname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:ellipsize="end"
                    android:textColor="@color/colorText"
                    android:textSize="15sp"/>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <!--学分-->
                    <TextView
                        android:id="@+id/tv_assistant_item_Credit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/comment_reply"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentBottom="true"
                        android:textSize="13sp"/>
                    <!--学期-->
                    <TextView
                        android:id="@+id/tv_assistant_item_Semester"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="18dp"
                        android:textColor="@color/comment_reply"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentBottom="true"
                        android:textSize="13sp"/>
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>